<NotepadPlus>
	<functionList>
		<!-- ======================================================== [ AutoHotKey ] -->
		<!-- AutoHotKey Regular Expression BY DDART             -->
		<parser 
			id="ahk_function" 
			displayName="AutoHotkey" 
			commentExpr="(?s:/\*.*?\*/)|(?m-s:\;.*?$)"
		>
			<classRange
				mainExpr="^\s*class\s+\w+[^\{]*\{"
				openSymbole = "\{"
				closeSymbole = "\}"
				displayMode="node"
			>
				<className>
					<nameExpr expr="class\s+\K\w+"/>
				</className>
				<function
					mainExpr="^\s*(?!(if|while|for|loop|return ))\w+\s*\([^\{\)]*\)\s*\{[^\}]*\}"
					openSymbole = "\{"
					closeSymbole = "\}"
				>
					<functionName>
						<funcNameExpr expr="^\s*\K\w+\s*\([^\{\)]*\)"/>
					</functionName>
				</function>
			</classRange>
			<function 
				mainExpr="^[\t ]*(?!(if|while|for|loop|return ))\w+\s*\([^\)]*\)\s*\{"
			>
				<functionName>
					<nameExpr expr="^\s*\K\w+\s*\([^\)]*\)"/>
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>